<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/transparentLayer_sighUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="82dp"
        android:background="#99FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/submitSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sigeup_title" />

    <TextView
        android:id="@+id/sigeup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="46dp"
        android:fontFamily="@font/dancingfont"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/locationSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameSighUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="#213b28"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ageSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSighUp" />

    <EditText
        android:id="@+id/ageSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="Age"
        android:inputType="number"
        android:textColor="#213b28"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gendeSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameSighUp" />

    <Spinner
        android:id="@+id/gendeSighUp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="15dp"
        android:tag="genderSpinner"
        app:layout_constraintBottom_toTopOf="@+id/weightSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageSignUp" />

    <EditText
        android:id="@+id/heightSighUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Height(inches)"
        android:inputType="number"
        android:textColor="#213b28"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activityLevelSighUp"
        app:layout_constraintEnd_toStartOf="@+id/weightSighUp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/weightSighUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="13dp"
        android:ems="10"
        android:hint="Weight(Pounds)"
        android:inputType="number"
        android:textColor="#213b28"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activityLevelSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heightSighUp"
        app:layout_constraintTop_toBottomOf="@+id/gendeSighUp" />

    <Button
        android:id="@+id/submitSighUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="37dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/takePictureSighUp" />

    <Button
        android:id="@+id/takePictureSighUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="42dp"
        android:text="Photo"
        app:layout_constraintBottom_toTopOf="@+id/submitSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilePictureSighUp"
        app:layout_constraintTop_toBottomOf="@+id/activityLevelSighUp" />

    <Spinner
        android:id="@+id/activityLevelSighUp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="15dp"
        android:tag="activityLevelSpinner"
        app:layout_constraintBottom_toTopOf="@+id/takePictureSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightSighUp" />

    <ImageView
        android:id="@+id/profilePictureSighUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="143dp"
        android:layout_toRightOf="@id/takePictureSighUp"
        app:layout_constraintBottom_toBottomOf="@+id/takePictureSighUp"
        app:layout_constraintEnd_toStartOf="@+id/takePictureSighUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/takePictureSighUp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/locationSighUp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="12dp"
        android:text="Location: --"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/nameSighUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sigeup_title" />

</androidx.constraintlayout.widget.ConstraintLayout>